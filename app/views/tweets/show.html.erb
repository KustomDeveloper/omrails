<div class="container">
	<div class="row">
	    <div class="offset-md-2 col-md-8">
	    	<div class="card card-block">
	    		<img class="img-fluid card-img-top" src='<%= @tweet.image %>' />

				<h4 class="card-title">
				  	<%= link_to @tweet.user.username, user_path(@tweet.user.username) %>
				</h4>

				<p class="card-text">
				  <%= @tweet.content %>
				</p>

			<% if @tweet.user == current_user %>
				<%= link_to 'Edit', edit_tweet_path(@tweet), class: "card-link" %>
				<%= link_to 'Back', tweets_path, class: "card-link" %>
			 <% end %>
			</div>
		</div>
	</div>
</div>
